@model JobMatchingSystem.Infrastructure.Models.CVAnalysisResult

@{
    ViewData["Title"] = "Kết quả phân tích CV";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-check mr-2"></i>
                        Kết quả phân tích CV
                    </h3>
                    <div class="card-tools">
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                
                <div class="card-body">
                    <!-- Basic Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h5 class="card-title">Thông tin cá nhân</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th width="30%">Họ tên:</th>
                                            <td>@(Model.FullName ?? "Không xác định")</td>
                                        </tr>
                                        <tr>
                                            <th>Năm sinh:</th>
                                            <td>@(Model.BirthYear ?? "Không xác định")</td>
                                        </tr>
                                        <tr>
                                            <th>Giới tính:</th>
                                            <td>@(Model.Gender ?? "Không xác định")</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>@(Model.Email ?? "Không xác định")</td>
                                        </tr>
                                        <tr>
                                            <th>Số điện thoại:</th>
                                            <td>@(Model.PhoneNumber ?? "Không xác định")</td>
                                        </tr>
                                        <tr>
                                            <th>Địa chỉ:</th>
                                            <td>@(Model.Address ?? "Không xác định")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Skills -->
                        <div class="col-md-6">
                            <div class="card card-success">
                                <div class="card-header">
                                    <h5 class="card-title">Kỹ năng</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Skills?.Any() == true)
                                    {
                                        <div class="skills-container">
                                            @foreach (var skill in Model.Skills)
                                            {
                                                <span class="badge badge-success mr-1 mb-1">@skill</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin kỹ năng</p>
                                    }
                                </div>
                            </div>

                            <!-- Achievements -->
                            <div class="card card-warning mt-3">
                                <div class="card-header">
                                    <h5 class="card-title">Thành tựu</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Achievements?.Any() == true)
                                    {
                                        <ul>
                                            @foreach (var achievement in Model.Achievements)
                                            {
                                                <li>@achievement</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin thành tựu</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Education -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card card-info">
                                <div class="card-header">
                                    <h5 class="card-title">Học vấn</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Education?.Any() == true)
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Trường</th>
                                                        <th>Bằng cấp</th>
                                                        <th>Chuyên ngành</th>
                                                        <th>Năm tốt nghiệp</th>
                                                        <th>GPA</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var edu in Model.Education)
                                                    {
                                                        <tr>
                                                            <td>@(edu.Institution ?? "N/A")</td>
                                                            <td>@(edu.Degree ?? "N/A")</td>
                                                            <td>@(edu.Major ?? "N/A")</td>
                                                            <td>@(edu.GraduationYear ?? "N/A")</td>
                                                            <td>@(edu.GPA ?? "N/A")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin học vấn</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Experience -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card card-secondary">
                                <div class="card-header">
                                    <h5 class="card-title">Kinh nghiệm làm việc</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Experience?.Any() == true)
                                    {
                                        @foreach (var exp in Model.Experience)
                                        {
                                            <div class="experience-item mb-3 p-3 border rounded">
                                                <h6 class="text-primary">@(exp.Position ?? "N/A") - @(exp.Company ?? "N/A")</h6>
                                                <p class="text-muted mb-2">
                                                    <i class="fas fa-calendar-alt"></i> 
                                                    @(exp.StartDate ?? "N/A") đến @(exp.EndDate ?? "N/A")
                                                </p>
                                                @if (!string.IsNullOrEmpty(exp.Description))
                                                {
                                                    <p>@exp.Description</p>
                                                }
                                                @if (exp.Responsibilities?.Any() == true)
                                                {
                                                    <strong>Trách nhiệm:</strong>
                                                    <ul>
                                                        @foreach (var responsibility in exp.Responsibilities)
                                                        {
                                                            <li>@responsibility</li>
                                                        }
                                                    </ul>
                                                }
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin kinh nghiệm làm việc</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Projects -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card card-dark">
                                <div class="card-header">
                                    <h5 class="card-title">Dự án</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Projects?.Any() == true)
                                    {
                                        <div class="row">
                                            @foreach (var project in Model.Projects)
                                            {
                                                <div class="col-md-6 mb-3">
                                                    <div class="project-item p-3 border rounded bg-light">
                                                        <h6 class="text-dark">@(project.ProjectName ?? "N/A")</h6>
                                                        @if (!string.IsNullOrEmpty(project.Description))
                                                        {
                                                            <p class="mb-2">@project.Description</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(project.Technologies))
                                                        {
                                                            <p class="mb-1"><strong>Công nghệ:</strong> @project.Technologies</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(project.Role))
                                                        {
                                                            <p class="mb-1"><strong>Vai trò:</strong> @project.Role</p>
                                                        }
                                                        @if (!string.IsNullOrEmpty(project.Duration))
                                                        {
                                                            <p class="mb-0"><strong>Thời gian:</strong> @project.Duration</p>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin dự án</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Export Options -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="card card-light">
                                <div class="card-header">
                                    <h5 class="card-title">Xuất kết quả</h5>
                                </div>
                                <div class="card-body">
                                    <form asp-action="ExportToExcel" method="post">
                                        <input type="hidden" name="results" value="@System.Text.Json.JsonSerializer.Serialize(new List<JobMatchingSystem.Infrastructure.Models.CVAnalysisResult> { Model })" />
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-file-excel"></i> Xuất Excel
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Original Text (Debug) -->
                    @if (!string.IsNullOrEmpty(Model.OriginalText))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="card card-outline card-secondary collapsed-card">
                                    <div class="card-header">
                                        <h5 class="card-title">Nội dung gốc từ PDF</h5>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body" style="display: none;">
                                        <pre class="text-sm">@Model.OriginalText</pre>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .skills-container {
            max-height: 200px;
            overflow-y: auto;
        }
        .experience-item {
            background-color: #f8f9fa;
        }
        .project-item {
            background-color: #f1f3f4 !important;
        }
    </style>
}