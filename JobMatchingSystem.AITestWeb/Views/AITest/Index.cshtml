@{
    ViewData["Title"] = "AI Test Platform";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Message</h1>
    <p class="lead">Test AI services for CV analysis and processing</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">üìù CV Text Analysis</h5>
                <p class="card-text">Analyze CV from text input</p>
                <a href="@Url.Action("CVAnalysis")" class="btn btn-primary">Test Now</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">üìÑ PDF CV Analysis</h5>
                <p class="card-text">Upload PDF and extract + analyze</p>
                <a href="@Url.Action("PDFAnalysis")" class="btn btn-success">Test Now</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">üìä Excel Export</h5>
                <p class="card-text">Batch analysis and export to Excel</p>
                <a href="@Url.Action("ExcelExport")" class="btn btn-info">Test Now</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">üé® CV Templates</h5>
                <p class="card-text">Test CV template generation and preview</p>
                <a href="@Url.Action("CVTemplates")" class="btn btn-success">View Templates</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">‚ö° Quick Template Test</h5>
                <p class="card-text">Quick test with sample CV data</p>
                <a href="@Url.Action("QuickTemplateTest")" class="btn btn-warning">Quick Test</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">‚ö° Quick Test</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <input type="text" id="quickTestInput" class="form-control" 
                               placeholder="Enter CV text for quick test..." />
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary w-100" onclick="quickTest()">Quick Test</button>
                    </div>
                </div>
                <div id="quickResult" class="mt-3" style="display: none;">
                    <div class="alert alert-info">
                        <div id="quickResultText"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="text-center">
            <a href="@Url.Action("HealthCheck")" class="btn btn-outline-secondary">
                üîß System Health Check
            </a>
        </div>
    </div>
</div>

<script>
function quickTest() {
    const input = document.getElementById('quickTestInput').value;
    const resultDiv = document.getElementById('quickResult');
    const resultText = document.getElementById('quickResultText');
    
    if (!input.trim()) {
        alert('Please enter CV text!');
        return;
    }
    
    resultDiv.style.display = 'block';
    resultText.innerHTML = 'Processing...';
    
    fetch('@Url.Action("QuickTest")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ cvText: input })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            resultText.innerHTML = '<strong>Analysis Result:</strong><br>' + JSON.stringify(data.result, null, 2);
        } else {
            resultText.innerHTML = '<strong>Error:</strong> ' + data.error;
        }
    })
    .catch(error => {
        resultText.innerHTML = '<strong>Network Error:</strong> ' + error.message;
    });
}
</script>